# Email Configuration
# Copy this file to .env.local and fill in your actual values

# SMTP Configuration
ZOHO_SMTP_PASSWORD=your_zoho_app_password_here
ZOHO_SMTP_USER=your_email@yourdomain.com
ZOHO_SMTP_HOST=smtppro.zoho.eu
ZOHO_SMTP_PORT=587

# Sender Configuration
SENDER_EMAIL=your_sender_email@yourdomain.com
SENDER_NAME=Your Company Name

# Server Configuration
PORT=3000

# Email Configuration Selection
# Options: 'finnish-email', 'english-email', 'swedish-email', or your custom config
EMAIL_CONFIG_NAME=english-email
